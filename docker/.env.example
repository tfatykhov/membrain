# Membrain Docker Configuration
# Copy to .env and customize

# Server
MEMBRAIN_PORT=50051
MEMBRAIN_MAX_WORKERS=10

# Encoder (FlyHash)
MEMBRAIN_INPUT_DIM=1536
MEMBRAIN_EXPANSION_RATIO=13.0
# MEMBRAIN_ACTIVE_BITS=96  # Optional: defaults to input_dim // 16

# Neural Network
MEMBRAIN_N_NEURONS=1000
MEMBRAIN_DT=0.001
MEMBRAIN_SYNAPSE=0.01

# Reproducibility (optional)
# MEMBRAIN_SEED=42

# Authentication (required for production)
# Single token (legacy):
# MEMBRAIN_AUTH_TOKEN=your-secret-token-here
# Multiple tokens (comma-separated):
# MEMBRAIN_AUTH_TOKENS=token1,token2,token3

# Consolidation (stochastic attractor dynamics)
MEMBRAIN_PRUNE_THRESHOLD=0.1
MEMBRAIN_NOISE_SCALE=0.05
MEMBRAIN_MAX_CONSOLIDATION_STEPS=50
MEMBRAIN_CONVERGENCE_THRESHOLD=1e-4

# Version tag for image
MEMBRAIN_VERSION=latest
